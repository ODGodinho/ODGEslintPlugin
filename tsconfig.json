{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "NodeNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "#types/*": [ "src/@types/*" ],
            "~/*": [ "src/*" ]
        },
        "rootDirs": [
            ".",
            "./src"
        ],
        "typeRoots": [
            "./src/@types",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules/",
        "dist/"
    ],
    "extends": "@odg/tsconfig/tsconfig.node.json",
    "include": [ "." ]
}
